<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinnerUM2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerUM1"
        android:layout_toLeftOf="@+id/tvTag"
        android:layout_toStartOf="@+id/tvTag"
        android:layout_marginTop="7dp" />

    <Spinner
        android:id="@+id/spinnerUM1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView26"
        android:layout_toLeftOf="@+id/tvTag"
        android:layout_toStartOf="@+id/tvTag" />

    <Spinner
        android:id="@+id/spinnerqty1"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerUM1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imgPhotoSaver"
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@android:drawable/gallery_thumb"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvTag"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:textSize="18sp"
        android:layout_below="@+id/imgPhotoSaver"
        android:layout_alignRight="@+id/imgPhotoSaver"
        android:layout_alignEnd="@+id/imgPhotoSaver"
        android:layout_marginTop="34dp" />


    <Button
        android:id="@+id/btnDIY"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/bg_screen2"
        android:onClick="onClick"
        android:text="DIY"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="473dp"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinnerUM3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerUM2"
        android:layout_toLeftOf="@+id/tvTag"
        android:layout_toStartOf="@+id/tvTag"
        android:layout_marginTop="7dp" />

    <Spinner
        android:id="@+id/spinnerqty2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerUM2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinnerqty3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinnerUM3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: "
        android:textStyle="bold"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/imgPhotoSaver"
        android:layout_alignLeft="@+id/imgPhotoSaver"
        android:layout_alignStart="@+id/imgPhotoSaver"
        android:layout_marginTop="42dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unit of Measurement: "
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView25"
        android:layout_alignBottom="@+id/textView25"
        android:layout_alignLeft="@+id/spinnerUM1"
        android:layout_alignStart="@+id/spinnerUM1" />

    <EditText
        android:id="@+id/addMaterials"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_background"
        android:hint="DIY Materials: "
        android:imeOptions="actionNext"
        android:singleLine="true"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnMaterial"
        app:layout_constraintTop_toBottomOf="@+id/add_diy_name"
        android:layout_above="@+id/btnDIY"
        android:layout_alignLeft="@+id/textView25"
        android:layout_alignStart="@+id/textView25"
        android:layout_marginBottom="7dp" />

    <ImageButton
        android:id="@+id/btnAddMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_diy_name"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/addMaterials"
        android:layout_toRightOf="@+id/addMaterials"
        android:layout_toEndOf="@+id/addMaterials" />

</RelativeLayout>