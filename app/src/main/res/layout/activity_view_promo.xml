<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cabiso.daphny.com.g_companion.Promo.ListPromoActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarDetails"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <ImageView
                android:src="@drawable/new_logo_white"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/_cardview_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBarLayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/img_buy_view_promo"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg2"
                android:layout_alignParentBottom="true" />

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:id="@+id/freeLayout"
                android:layout_alignBottom="@+id/img_buy_view_promo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/backgroundColor">

                <ImageView
                    android:id="@+id/img_free_view_promo"
                    android:layout_width="170dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/bg3"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/freeImg"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:srcCompat="@drawable/icon_free"
                android:layout_marginRight="102dp"
                android:layout_marginEnd="102dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/sellerNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Promo DIY Name"
                android:paddingLeft="10dp"
                android:textColor="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/sold_out_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/freeImg"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/freeImg"
                app:srcCompat="@drawable/sold_out" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/_cardview_02"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/_cardview_01"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/promoQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Promo DIY QTY"
                android:textColor="@color/black"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:paddingRight="20dp"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">


            <TextView
                android:id="@+id/tvPromoExpiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Promo Expiration"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buyText"
                android:layout_marginRight="10dp"
                android:text="Buy"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/buyCountsQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="10"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/view_promo_item_diyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Promo DIY Name"
                android:textSize="23sp"
                android:textStyle="bold" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gettText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/btnContactPromoSeller"
                    android:layout_alignEnd="@+id/btnContactPromoSeller"
                    android:layout_alignRight="@+id/btnContactPromoSeller"
                    android:layout_marginRight="10dp"
                    android:text="Get"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/freeItemQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="10"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/view_promo_free_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Free DIY Name"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="120dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/promo_selling_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="0.00"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout3">

        <Button
            style="@style/LoginStyle"
            android:id="@+id/btnContactPromoSeller"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gen_scheme1"
            android:text="Contact Seller"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:layout_alignBaseline="@+id/btnBuyPromo"
            android:layout_alignBottom="@+id/btnBuyPromo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btnBuyPromo"
            style="@style/LoginStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gen_scheme1"
            android:text="BUY DIY"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
