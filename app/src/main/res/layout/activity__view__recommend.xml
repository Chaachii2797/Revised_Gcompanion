<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gen_scheme3"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarDetails"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <ImageView
                android:src="@drawable/new_logo_white"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView_sell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_screen1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardView1_sell"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:cardBackgroundColor="?attr/colorPrimary">

                <android.support.v4.view.ViewPager
                    android:id="@+id/diyImagesViewPagers_sell"
                    android:layout_width="350dp"
                    android:layout_height="190dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/appBarLayout"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="40dp"
                    android:background="@android:color/transparent">

                </android.support.v4.view.ViewPager>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardView_sell"
                android:layout_width="330dp"
                android:layout_height="130dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="5dp"
                app:elevation="5dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/diy_name_sell"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/diy_material_sell"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/textView29"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:hint="1. Glue
                              2. Scissors
                              3. Pencil"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView29_sell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/diy_procedure"
                    android:layout_alignStart="@+id/diy_procedure"
                    android:layout_below="@+id/diyImagesViewPagers_sell"
                    android:background="@color/gen_scheme1"
                    android:paddingLeft="10dp"
                    android:text="Materials:"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>


            <!--KARON NI-->

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardView2"
                android:layout_width="330dp"
                android:layout_height="130dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="5dp"
                app:elevation="5dp"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/cardView_sell"
                android:layout_alignLeft="@+id/cardView_sell"
                android:layout_alignStart="@+id/cardView_sell">

                <TextView
                    android:id="@+id/textView31_sell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView29"
                    android:layout_alignStart="@+id/textView29"
                    android:layout_below="@+id/diy_material"
                    android:background="@color/gen_scheme1"
                    android:paddingLeft="10dp"
                    android:text="Procedures:"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/diy_procedure_sell"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_alignLeft="@+id/diy_material"
                    android:layout_alignStart="@+id/diy_material"
                    android:layout_below="@+id/textView31"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="40dp"
                    android:hint="1. Make the materials clean. \n 2. Use scissors to cut it. Be careful. \n 3. Use glue."
                    android:scrollbars="vertical"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/diy_name_sell"
                android:layout_width="383dp"
                android:layout_height="55dp"
                android:background="@color/gen_scheme1"
                android:capitalize="words"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_below="@+id/cardView1_sell"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
