<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/bg_screen1"
    app:cardCornerRadius="10dp"
    app:elevation="5dp">

    <TextView
        android:id="@+id/item_date_bidded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/diy_material"
        android:layout_alignStart="@+id/diy_material"
        android:layout_below="@+id/textView31"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/owner_cmmnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/diy_material"
        android:layout_alignStart="@+id/diy_material"
        android:layout_below="@+id/diy_owner_cn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:scrollbars="vertical"
        android:text="Proposal Statement :"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_bidders_cmnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/diy_material"
        android:layout_alignStart="@+id/diy_material"
        android:layout_below="@+id/owner_cmmnt"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="50dp"
        android:hint="Comment :"
        android:scrollbars="vertical"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/priceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/diy_material"
        android:layout_alignStart="@+id/diy_material"
        android:layout_below="@+id/diy_owner_cn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="Bid Initial Price :"
        android:scrollbars="vertical"
        android:text="Bid Date :"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_price_bidded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/diy_material"
        android:layout_alignStart="@+id/diy_material"
        android:layout_below="@+id/diy_owner_cn"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="30dp"
        android:scrollbars="vertical"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/diy_material"
        android:layout_alignStart="@+id/diy_material"
        android:layout_below="@+id/textView31"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:hint="Bid Date :"
        android:scrollbars="vertical"
        android:text="Bid Price :"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

</android.support.v7.widget.CardView>