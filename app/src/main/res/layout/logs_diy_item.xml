<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="140dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/backgroundColor"
    app:cardCornerRadius="15dp"
    app:elevation="8dp">

    <TextView
        android:id="@+id/get_transac_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/diy_item_icons"
        android:layout_toRightOf="@+id/diy_item_icons"
        android:text="Date : "
        android:textColor="@android:color/black"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/tv_complain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/diy_item_icons"
        android:layout_toRightOf="@+id/diy_item_icons"
        android:text="DIY Name : "
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/get_transac_diy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/diy_item_icons"
        android:layout_toRightOf="@+id/diy_item_icons"
        android:text="DIY Name:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/get_transac_buyer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="15dp"
        android:layout_toEndOf="@+id/diy_item_icons"
        android:layout_toRightOf="@+id/diy_item_icons"
        android:text="Name:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_reported_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="88dp"
        android:layout_toEndOf="@+id/diy_item_icons"
        android:layout_toRightOf="@+id/diy_item_icons"
        android:text="buyer: "
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvQTY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy QTY"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="35dp"/>

</android.support.v7.widget.CardView>
