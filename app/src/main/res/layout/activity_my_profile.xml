<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/add"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/star"
        android:layout_below="@+id/profile_picture"
        android:layout_toLeftOf="@+id/profile_picture"
        android:layout_toStartOf="@+id/profile_picture"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/user_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:text="No ratings yet."
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/profile_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_email"
        android:layout_alignLeft="@+id/profile_email"
        android:layout_alignStart="@+id/profile_email"
        android:layout_marginBottom="11dp"
        android:hint="Username:" />

    <EditText
        android:id="@+id/profile_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_password"
        android:layout_alignLeft="@+id/profile_password"
        android:layout_alignStart="@+id/profile_password"
        android:layout_marginBottom="20dp"
        android:hint="Email:" />

    <EditText
        android:id="@+id/profile_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_phone"
        android:layout_alignLeft="@+id/profile_address"
        android:layout_alignStart="@+id/profile_address"
        android:layout_marginBottom="16dp"
        android:hint="Password:" />

    <EditText
        android:id="@+id/profile_phone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_address"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:hint="Phone number:"
        android:phoneNumber="true" />

    <EditText
        android:id="@+id/profile_address"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Address:"
        android:layout_above="@+id/profile_submit"
        android:layout_alignLeft="@+id/profile_phone"
        android:layout_alignStart="@+id/profile_phone" />

    <Button
        android:id="@+id/profile_submit"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/bg_screen2"
        android:onClick="onClick"
        android:text="SAVE PROFILE"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="473dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
