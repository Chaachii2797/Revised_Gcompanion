<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="215dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/backgroundColor"
    app:cardCornerRadius="10dp"
    app:elevation="5dp">


    <ImageButton
        android:id="@+id/heartu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/staru"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/staru"
        android:layout_below="@+id/get_diyName"
        android:layout_marginLeft="245dp"
        android:layout_marginTop="160dp"
        android:background="@null"
        android:src="@drawable/vector_heart" />

    <ImageButton
        android:id="@+id/staru"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="150dp"
        android:background="@null"
        android:descendantFocusability="blocksDescendants"
        android:src="@android:drawable/btn_star" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="Computer Desk"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="22sp" />


    <ImageView
        android:id="@+id/owner_pic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="145dp"
        app:srcCompat="@drawable/main_view" />

    <ImageView
        android:id="@+id/diy_item_icon"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/item_name_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:text="by: Daphny Cabiso"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_identity"
        android:layout_width="71dp"
        android:layout_height="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="193dp"
        android:gravity="center"
        android:hint="Selling"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="14sp" />


</android.support.v7.widget.CardView>
