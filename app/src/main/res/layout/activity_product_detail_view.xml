<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:ignore="RtlHardcoded"
    app:layout_collapseParallaxMultiplier="0.9">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/productImagesViewPager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@android:color/white" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/main.toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" >

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollviewproduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:behavior_overlapTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardElevation="5dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/productinfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView16"
                        android:layout_centerHorizontal="true"
                        android:text="Title of the Product"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/productStatus"
                        android:layout_alignLeft="@+id/productDescription"
                        android:layout_alignStart="@+id/productDescription"
                        android:text="$1000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productPriceStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/textView17"
                        android:text="Fixed/Negotiable"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/productStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/productDescription"
                        android:layout_alignRight="@+id/productDescription"
                        android:layout_below="@+id/productPriceStyle"
                        android:layout_marginTop="11dp"
                        android:text="New/Used"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/productDescription"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/productStatus"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:text="This is the description of the book given by the used which is limited to 100 words which gives a synopsis or the outline of the contents of the story or what ever he wants to convey us throught it"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Product Name:" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/productTitle"
                        android:text="Price:" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/productDescription"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Item Description:" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ownerinfo"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productOwnerContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/chatWithSellerButton"
                        android:layout_alignParentTop="true"
                        android:layout_alignRight="@+id/chatWithSellerButton"
                        android:layout_marginTop="13dp"
                        android:text="Seller Info"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/productOwnerAddress"
                        android:layout_alignStart="@+id/productOwnerAddress"
                        android:layout_alignTop="@+id/productOwnerName"
                        android:text="Seller Name:" />

                    <TextView
                        android:id="@+id/productOwnerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/productOwnerContact"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:text="Martin"
                        android:textSize="20dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/productOwnerAddress"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="Address:" />

                    <TextView
                        android:id="@+id/productOwnerAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="740 WestCott Street   Apt 3  Syracuse    NY  13210"
                        android:textSize="18sp"
                        android:layout_above="@+id/textView23"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/productOwnerPhone"
                        android:layout_alignEnd="@+id/textView21"
                        android:layout_alignRight="@+id/textView21"
                        android:text="Contact No.:" />

                    <TextView
                        android:id="@+id/productOwnerPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="315-420-4196"
                        android:textSize="18sp"
                        android:layout_above="@+id/chatWithSellerButton"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:id="@+id/chatWithSellerButton"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/shape"
                        android:backgroundTint="@color/bg_screen2"
                        android:onClick="onClick"
                        android:text="CHAT"
                        android:textColor="@android:color/background_light"
                        tools:layout_editor_absoluteX="311dp"
                        tools:layout_editor_absoluteY="473dp" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>