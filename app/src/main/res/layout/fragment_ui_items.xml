<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen1">

    <TextView
        android:id="@+id/fetch_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DIY Name"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/fetch_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/add"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:id="@+id/fetch_item_procedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procedure:"
        android:textColor="@android:color/background_light"
        android:textSize="23dp"
        android:layout_below="@+id/fetch_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/fetch_item_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Materials:"
        android:textColor="@android:color/background_light"
        android:textSize="23dp"
        android:layout_below="@+id/fetch_item_procedure"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
