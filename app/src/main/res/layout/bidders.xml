<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_border">

        <ImageView
            android:id="@+id/img_bidders_dialog"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/img_dialog" />

        <EditText
            android:id="@+id/et_bidders_price"
            style="@style/LoginStyle2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/btnWithGoogle"
            android:layout_alignStart="@+id/btnWithGoogle"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:backgroundTint="#FFE8EAEA"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Bidding Price"
            android:inputType="number"
            android:paddingLeft="30dp"
            android:textColor="#7f8c8d"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_bidders_dialog"
            style="@style/LoginStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/gen_scheme4"
            android:gravity="center"
            android:text=" Ok " />
    </LinearLayout>

</RelativeLayout>