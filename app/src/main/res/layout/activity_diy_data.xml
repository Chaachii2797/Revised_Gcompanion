<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="Materials:"
        android:textSize="18sp"
        android:layout_below="@+id/diy_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/diy_materials"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procedures:"
        android:textSize="18sp"
        android:layout_below="@+id/diy_materials"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29"
        android:layout_marginTop="11dp" />

    <ImageView
        android:id="@+id/diy_image"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/add" />

    <TextView
        android:id="@+id/diy_procedures"
        android:layout_width="330dp"
        android:layout_height="210dp"
        android:layout_alignLeft="@+id/diy_materials"
        android:layout_alignStart="@+id/diy_materials"
        android:layout_below="@+id/textView31"
        android:layout_marginTop="12dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textColor="@android:color/black" />


</RelativeLayout>