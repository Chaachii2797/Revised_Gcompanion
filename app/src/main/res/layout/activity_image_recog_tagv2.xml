<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgPhotoSaver"
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@android:drawable/gallery_thumb"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/tvTag"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:background="@drawable/edittext_background"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:textSize="18sp"
        tools:layout_editor_absoluteY="371dp"
        tools:layout_editor_absoluteX="29dp"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_toLeftOf="@+id/btnAddMaterial"
        android:layout_toStartOf="@+id/btnAddMaterial" />

    <Button
        android:id="@+id/btnDIY"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/bg_screen2"
        android:onClick="onClick"
        android:text="DIY"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteY="481dp"
        tools:layout_editor_absoluteX="145dp"
        android:layout_below="@+id/tvTag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:id="@+id/btnAddMaterial"
        android:layout_width="35dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/addMaterials"
        android:layout_alignRight="@+id/imgPhotoSaver"
        android:layout_alignEnd="@+id/imgPhotoSaver"
        tools:layout_editor_absoluteY="314dp"
        tools:layout_editor_absoluteX="306dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/imgPhotoSaver"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <ListView
            android:id="@+id/lv_tag"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>


</RelativeLayout>