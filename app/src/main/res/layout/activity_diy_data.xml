<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/diyImagesViewPager"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Materials:"
        android:textSize="18sp"
        android:layout_below="@+id/diyImagesViewPager"
        android:layout_alignLeft="@+id/diy_procedures"
        android:layout_alignStart="@+id/diy_procedures" />

    <TextView
        android:id="@+id/diy_materials"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Procedures:"
        android:textSize="18sp"
        android:layout_below="@+id/diy_materials"
        android:layout_alignLeft="@+id/textView29"
        android:layout_alignStart="@+id/textView29"
        android:layout_marginTop="11dp" />

    <ImageView
        android:id="@+id/diy_image"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:srcCompat="@drawable/add"
        android:layout_below="@+id/diy_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/diy_procedures"
        android:layout_width="330dp"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/diy_materials"
        android:layout_alignStart="@+id/diy_materials"
        android:layout_below="@+id/textView31"
        android:layout_marginTop="12dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/diy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:capitalize="words"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif" />


</RelativeLayout>