<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/gen_scheme1"
    app:cardCornerRadius="15dp"
    app:elevation="8dp">


    <ImageView
        android:id="@+id/promo_img"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/promo_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_diyName"
        android:layout_alignStart="@+id/get_diyName"
        android:layout_below="@+id/get_diyName"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="60dp"
        android:hint="category"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/promo_diyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/diy_item_icons"
        android:layout_toRightOf="@+id/diy_item_icons"
        android:text="DIY Name:"
        android:textColor="@color/backgroundColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBoxPromo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp" />

</android.support.v7.widget.CardView>
